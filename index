<script>
function toggleLanguage() {
  const viElements = document.querySelectorAll('[data-lang="vi"]');
  const enElements = document.querySelectorAll('[data-lang="en"]');
  const isVietnamese = viElements[0] && viElements[0].style.display !== 'none';
  viElements.forEach(el => el.style.display = isVietnamese ? 'none' : '');
  enElements.forEach(el => el.style.display = isVietnamese ? '' : 'none');
  document.getElementById('lang-toggle').textContent = isVietnamese ? 'VI' : 'EN';
}

setTimeout(() => {
  document.getElementById('contact-popup').style.display = 'block';
}, 10000);

const carousel = document.getElementById('carousel');
let index = 0;
setInterval(() => {
  index = (index + 1) % carousel.children.length;
  carousel.style.transform = `translateX(-${index * 100}%)`;
}, 3000);
</script>

